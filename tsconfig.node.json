{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/translate-clawer",
    "src/dictionarys/modals/clawer-base.ts",
    "src/dictionarys/index.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "types": ["electron-vite/node"],
    "module": "ESNext",
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "target": "es2016"
  }
}
